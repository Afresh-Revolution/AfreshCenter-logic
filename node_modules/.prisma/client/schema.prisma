// AfreshCenter services schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Service {
  id            String   @id @default(cuid())
  title         String
  category      String
  priceRange    String
  totalBookings Int      @default(0)
  visible       Boolean  @default(true) // if true, show on main page
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
